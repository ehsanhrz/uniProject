        <select asp-for="MilitaryServiceStatus" asp-items="Html.GetEnumSelectList<MilitaryStatus>()" class="form-control form-select">
          <option selected="selected" value="">انتخاب کنید</option>
        </select>
      </div>
      <div class="col-md-4 mb-3 ">
        <label asp-for="MilitaryServiceMonth"></label>
        <input asp-for="MilitaryServiceMonth" class="form-control"/>
        <span class="text-danger" asp-validation-for="MilitaryServiceMonth"></span>
      </div>
