        </select>
        <span class="text-danger" asp-validation-for="Religion"></span>
      </div>
      <div class="col-md-4 mb-3 ">
        <label asp-for="LeftHandPerson"></label>
        <input asp-for="LeftHandPerson" type="checkbox" class="form-check-input"/>
        <span class="text-danger" asp-validation-for="LeftHandPerson"></span>
      </div>

    </div>
  </fieldset>
</div>
