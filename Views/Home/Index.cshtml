@section Styles
{<link href="~/lib/persian-datepicker/css/persian-datepicker.min.css" rel="stylesheet" />}
@section Scripts
{
  <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
  <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

  <script src="~/lib/persian-datepicker/js/persian-date.js" ></script>
  <script src="~/lib/persian-datepicker/js/persian-datepicker.min.js" type="text/javascript"></script>
  <script>
  $(document).ready(
          () => {
            $(".persian-datepicker").pDatepicker({
                                            "autoClose": true,
                                            "position": "auto",
                                            "responsive": true,
                                            "inputDelay": 800,
                                            initialValue: false,
                                            observer: true,
                                            autoClose: true,
                                            format: 'L',
                                            "toolbox": {
                                                "enabled": true,
                                                "calendarSwitch": {
                                                    "enabled": false,
                                                },
                                            },
                                            "initialValueType": 'persian',
                                            "calendarType": "persian",
                                        });
          }
  )
  </script>
}
