    ViewData["Title"] = "فرم";
}
<style>
  
</style>
<div>
<form asp-controller="Home" asp-action="Index" method="get">
  <div class="container-fluid" style="border:1px solid black;">
    <fieldset>
      <legend style="color:blue;font-weight:bold;">اطلاعات فردی</legend>
      <div class="row">
